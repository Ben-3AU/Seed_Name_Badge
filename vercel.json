{
  "version": 2,
  "github": {
    "enabled": true,
    "silent": false
  },
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/webhook",
      "methods": ["POST"],
      "dest": "/api/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/config",
      "dest": "/api/server.js"
    },
    {
      "src": "/payment",
      "dest": "/payment.html"
    },
    {
      "src": "/success",
      "dest": "/success.html"
    },
    {
      "src": "/script.js",
      "dest": "/script.js",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/widget.js",
      "dest": "/widget.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://*.terratag.com.au",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Max-Age": "86400",
        "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0",
        "Pragma": "no-cache",
        "Expires": "0",
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/widget-calculator.js",
      "dest": "/widget-calculator.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://*.terratag.com.au",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Max-Age": "86400",
        "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0",
        "Pragma": "no-cache",
        "Expires": "0",
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/styles.css",
      "dest": "/styles.css",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "log": {
    "access": true,
    "debug": true
  }
} 